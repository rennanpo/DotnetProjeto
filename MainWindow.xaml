<Window x:Class="MultiScreenApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="200" Width="400">
    <Grid>
        <Button Content="Choose File" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Click="ChooseFile_Click"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top">
            <Button Name="PauseButton" Content="Pause" Click="PauseButton_Click" Visibility="Collapsed"/>
            <Button Name="PreviousButton" Content="Previous" Click="PreviousSlide_Click" Visibility="Collapsed"/>
            <Button Name="NextButton" Content="Next" Click="NextSlide_Click" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
